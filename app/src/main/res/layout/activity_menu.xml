<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageButton
        android:id="@+id/btn_netflix"
        android:layout_width="198dp"
        android:layout_height="190dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/logo_netflix"
        android:contentDescription="bbb"
        app:layout_constraintBottom_toTopOf="@+id/btn_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="202dp"
        android:layout_height="202dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/search"
        android:contentDescription="bbbb"
        app:layout_constraintBottom_toTopOf="@+id/btn_crud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_crud"
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/crud"
        android:contentDescription="bbbb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>